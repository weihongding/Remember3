<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg" >

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="25dp"
            >

            <TextView
                android:text="标题"
                android:textSize="24dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center" />

            <EditText
                android:id="@+id/edit_rc_q_set_title"
                android:text="标题内容"
                android:textSize="22dp"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:lines="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="25dp"
            android:layout_alignParentLeft="true"
            >

            <TextView
                android:text="备注"
                android:textSize="24dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"/>

            <EditText
                android:id="@+id/edit_rc_q_set_des"
                android:text="备注内容备注内容备注内容备注内容备注内容备注内容备注内容备注内容备注内容"
                android:textSize="20dp"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:maxLines="3"
                android:minLines="1"
                android:ellipsize="end"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="25dp"
            android:layout_alignParentLeft="true"
            >

            <TextView
                android:text="时间"
                android:lines="2"
                android:textSize="24dp"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/edit_rc_q_time_set_year"
                        android:textSize="18dp"
                        android:text="2019"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-2dp"/>
                    <TextView
                        android:textSize="20dp"
                        android:text="年"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <EditText
                        android:id="@+id/edit_rc_q_time_set_month"
                        android:textSize="18dp"
                        android:text="12"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-2dp"/>
                    <TextView
                        android:textSize="20dp"
                        android:text="月"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <EditText
                        android:id="@+id/edit_rc_q_time_set_day"
                        android:textSize="18dp"
                        android:text="31"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-2dp"/>
                    <TextView
                        android:textSize="20dp"
                        android:text="日"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp">

                    <EditText
                        android:id="@+id/edit_rc_q_time_set_H"
                        android:textSize="18dp"
                        android:text="17"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-2dp"/>
                    <TextView
                        android:textSize="20dp"
                        android:text="："
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <EditText
                        android:id="@+id/edit_rc_q_time_set_M"
                        android:textSize="18dp"
                        android:text="12"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-2dp"/>
                    <TextView
                        android:textSize="20dp"
                        android:text="："
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <EditText
                        android:id="@+id/edit_rc_q_time_set_S"
                        android:textSize="18dp"
                        android:text="31"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-2dp"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="25dp"
            android:layout_marginBottom="20dp"
            >

            <TextView
                android:text="颜色"
                android:textSize="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btn_rc_q_set_color"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/circle_15"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#c0c0c0"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_rc_q_set_addunq"
                android:text="添加待定"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="center"/>

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#c0c0c0"/>

            <Button
                android:id="@+id/btn_rc_q_set_save"
                android:text="确定"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="center"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>